<%- include('./partials/header') %>
  <main>

    <% if(items){ %>
      <table>
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Item Price</th>
          </tr>
        </thead>

        <tbody>
          <% for(let i=0;i < items.length;i++){%>
            <tr>
              <td>
                <%= items[i] %>
              </td>
              <td>$<%= prices[i] %>
              </td>
              <% } %>
            </tr>

            <td>Total</td>
            <td>$<%=total%>
            </td>
            <% } else { %>
              <h6>NO ITEMS IN CART</h6>
              <% } %>
        </tbody>
      </table>
      <br>


      <% if(items){ %>
        <a href="/order"><button type="submit" class="btn waves-effect waves-light black">
            ADD ITEMS
          <i class="material-icons right">add_shopping_cart</i>
          </button></a><br><br>
        <form action="/cart/<%=cartId%>/checkout?_method=DELETE" method="POST">
          <button type="submit" class="btn waves-effect waves-light black">
            Checkout
            <i class="material-icons right">credit_card</i>
          </button>
        </form><br>
        <form action="/cart/<%=cartId%>?_method=DELETE" method="POST">
          <button type="submit" class="btn waves-effect waves-light black">
            Clear Cart
            <i class="material-icons right">delete</i>
          </button>
        </form>
        <% } %>














  </main>
  <%- include('./partials/footer') %>